<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/onBoardFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.noteapplication.ui.fragment.notes.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_detailNoteFragment"
            app:destination="@id/detailNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.noteapplication.ui.fragment.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board">
        <action
            android:id="@+id/action_onBoardFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardViewPagerFragment"
        android:name="com.example.noteapplication.ui.fragment.onboard.OnBoardViewPagerFragment"
        android:label="fragment_on_board_view_pager"
        tools:layout="@layout/fragment_on_board_view_pager" />
    <fragment
        android:id="@+id/detailNoteFragment"
        android:name="com.example.noteapplication.ui.fragment.notes.DetailNoteFragment"
        android:label="fragment_detail_note"
        tools:layout="@layout/fragment_detail_note" >
        <action
            android:id="@+id/action_detailNoteFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <argument
        android:name="date"
        android:defaultValue=" " />
</navigation>